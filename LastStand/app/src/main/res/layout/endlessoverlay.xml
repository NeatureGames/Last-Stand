<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="100"
        android:id="@+id/HUDscore"/>
    <TextView
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_alignTop="@+id/HUDscore"
        android:layout_marginTop="35dp"
        android:text="0s"
        android:id="@+id/time"/>
    <TextView
        android:layout_marginLeft="50dp"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="1/4"
        android:layout_alignTop="@+id/time"
        android:id="@+id/coins"/>
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/HUDscore"
        android:background="@drawable/goldtrophy"/>
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/time"
        android:background="@drawable/stopwatch"/>
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/coins"
        android:background="@drawable/testcoin"/>
    <ImageButton
        android:layout_marginLeft="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_margin="14dp"
        android:id="@+id/pausebutton"
        android:background="@drawable/pausebutton"/>


</RelativeLayout>