<?xml version="1.0" encoding="utf-8"?>

<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zach.laststand"
    android:versionCode="1"
    android:versionName="1.0" >


    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <!-- Tell the system this app requires OpenGL ES 2.0. -->
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup="true"
        android:theme="@android:style/Theme.NoTitleBar">

        <activity
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:name="com.example.zach.menu.Menu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:name="com.example.zach.menu.Levels" >
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="com.example.zach.laststand.OpenGLES20Activity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="com.example.zach.menu.Extras"
            android:label="@string/app_name">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="com.example.zach.menu.Characters"
            android:label="@string/app_name">
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.example.zach.menu.Shop"
            android:label="@string/app_name">
        </activity>


    </application>

</manifest>

